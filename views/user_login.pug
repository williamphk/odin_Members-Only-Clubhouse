extends layout

block content
  h1 Login Page

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='Email', name='email', required='true' value= undefined===user ? '' : user.email)
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='Password', name='password', required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg